<doctrine-mapping>
    <entity name="User\Core\Domain\User" table="users">
        <id name="id" type="User\Core\Domain\UserId">
            <generator strategy="NONE" />
        </id>
        <embedded name="fullName" use-column-prefix="false" class="User\Core\Domain\UserFullName" />
        <field name="email" type="User\Core\Shared\Domain\Email" />
        <field name="hashedPassword" column="hashed_password" type="User\Core\Shared\Domain\HashedPassword" />
    </entity>
</doctrine-mapping>
